<script type="text/javascript">
		$(document).on('change', "select#course", function(){
			var course = (this.value);
			$.post(
				"@Url.Action("GetStudents", "Teacher")",
				{ id: course },
				function (result) {
					$("#student").show();
					$("#grade").show();
					$("#submit").show();
					$("#student").append(result);
				}
			)

		return false;
	})
</script>