@model ASP_Project.ViewModels.StudentRegisterViewModel
@{
	ViewData["Title"] = "RegisterCourse";
}

<h2>RegisterCourse</h2>

<div class="row">
	<div class="col-md-4">
		<form asp-action="RegisterCourse">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			
			<div class="form-group">
				<label asp-for="Courses" class="control-label"></label>
				<select asp-for="CourseID">
					<option value="" disabled>Select a Course</option>
					@foreach(var course in Model.Courses)
					{
						<option value="@course.CodeID">@course.Name</option>
					}
				</select>
				<span asp-validation-for="Courses" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-default" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to Menu</a>
</div>

@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
	}