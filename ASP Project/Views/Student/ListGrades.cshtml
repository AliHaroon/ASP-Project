@model ASP_Project.Models.Student
@{
	ViewData["Title"] = "ListGrades";
}
<div class="container bg-white fixed-section" style="padding: 20px; overflow-x: hidden; overflow-y:auto; margin-bottom: 0 0;">
	<h2 class="header h2 text-center">Grades</h2>
	<div class="header h3 text-center">
		<b>Name:</b> @Model.FirstName @Model.MiddleName @Model.LastName
	</div>
	<table class="table bg-white table-hover table-striped">
		<thead class="bg-danger text-white">
			<tr>
				<th scope="col">
					CourseID
				</th>
				<th scope="col">
					CourseName
				</th>
				<th scope="col">
					Number Of Credits
				</th>
				<th scope="col">
					Grade
				</th>
			</tr>
		</thead>
		<tbody class="bg-light">
			@foreach (var item in Model.Enrollments)
			{
				<tr>
					<td scope="row">
						@item.Course.CodeID
					</td>
					<td>
						@item.Course.Name
					</td>
					<td>
						@item.Course.NumOfCredits
					</td>
					<td>
						@item.Grade
					</td>
				</tr>
			}
		</tbody>
	</table>
	<div>
		<a class="btn btn-lg btn-link btn-primary btn-outline-danger" asp-action="Index">Back to Main Menu</a>
	</div>
</div>