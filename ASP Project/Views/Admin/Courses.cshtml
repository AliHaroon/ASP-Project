@model IEnumerable<ASP_Project.Models.Course>
@{
	ViewData["Title"] = "Courses";
}
<div class="container bg-white fixed-section" style="padding: 20px; overflow-x: hidden; overflow-y:auto; margin-bottom: 0 0;">
	<h2 class="header h2 text-center">Courses</h2>
	<table class="table bg-white table-hover table-striped">
		<thead class="bg-primary text-white">
			<tr>
				<th scope="col">
					@Html.DisplayNameFor(model => model.CodeID)
				</th>
				<th scope="col">
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th scope="col">
					@Html.DisplayNameFor(model => model.NumOfCredits)
				</th>
			</tr>
		</thead>
		<tbody class="bg-light">
			@foreach (var item in Model)
			{
				<tr>
					<td scope="row">
						@Html.DisplayFor(modelItem => item.CodeID)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.NumOfCredits) credit(s)
					</td>
					<td width="10">
						<a asp-controller="Admin" asp-action="EditCourse" asp-route-Code="@item.CodeID">EditCourse</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>